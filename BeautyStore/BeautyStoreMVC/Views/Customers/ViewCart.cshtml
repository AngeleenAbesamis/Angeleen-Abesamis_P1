@model IEnumerable<BeautyStoreMVC.Models.CreateProductViewModel>

@{
    ViewData["Title"] = "Shopping Cart";
}

<h1>Shopping Cart</h1>


<table class="table" id="DetailsTable">
    <thead>
        <tr>
            <th>
                Product Title
            </th>

            <th>
                Quantity
            </th>
            <th>
                Price
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.ProductPrice)
                </td>
                <td>
                    <a asp-action="RemoveFromCart" asp-route-id="@item.ItemId">Remove</a> |
                    <a asp-action="VIewMoreProductDetails2" asp-route-id="@item.ProductId">Product Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>


@if (Model.Count() > 0)
{
    <form asp-action="PlaceOrder">
        <input type="submit" value="Place Order Now" class="btn btn-danger" />
    </form>
}

@section scripts {
    <script type="text/javascript">

        $(document).ready(function () {
            INitializeTable("DetailsTable");

        });

    </script>
}