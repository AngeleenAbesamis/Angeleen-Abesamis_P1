@model IEnumerable<BeautyStoreMVC.Models.CreateProductViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Order Details</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                Product Title
            </th>

            <th>
                Quantity
            </th>
            <th>
                Price
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.ProductPrice)
                </td>
                <td>
                    <a asp-action="VIewMoreProductDetails2" asp-route-id="@item.ProductId">Product Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>

